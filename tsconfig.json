{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,                 // Skip checking types in libraries
    "noEmitOnError": false,               // Allows emitting files even if there are errors

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,                       // Prevent emitting files, handled by Vite
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,                       // Keeps strict checks (adjust if needed)
    "noUnusedLocals": false,              // Skips unused locals errors
    "noUnusedParameters": false,          // Skips unused parameters errors
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
